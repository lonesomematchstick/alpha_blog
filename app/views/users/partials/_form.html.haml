.container
  .row.justify-content-center
    .col-10
      = render partial: "shared/errors", locals: {f: @user}

  .row.justify-content-center.mt-4
    .col-6
      = form_with(model: @user, class: %w(shadow p-3 mb-4 bg-info rounded), local: true) do |f|
        .row.form-group
          = f.label :username, class: %w(col-2 col-form-label text-white)
          .col-sm-10
            = f.text_field :username, placeholder: "Enter a username", class: "form-control shadow rounded"
        .row.form-group
          = f.label :email, class: %w(col-2 col-form-label text-white)
          .col-sm-10
            =f.email_field :email, placeholder: "Enter your email address", class: %w(form-control shadow rouned)
        .row.form-group
          = f.label :password, class: %w(col-2 col-form-label text-white)
          .col-sm-10
            =f.text_field :password, placeholder: "Choose a password", class: %w(form-control shadow rouned)

        - btn_msg = @user.persisted? ? "Update user" : "Create User"
        .row.form-group.justify-content-center
          = f.submit "#{btn_msg}", class: %w(btn btn-outline-light btn-lg)

  .row.justify-content-center
    = link_to '[ Cancel - Return to Home Page ]', root_path, class: %w(text-info)